<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DXFer">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <!-- Intent filter for content:// URIs (e.g., file managers, cloud storage) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="*"
                    android:scheme="content"
                    android:mimeType="application/dxf"
                    tools:ignore="IntentFilterUniqueDataAttributes" />
                <data
                    android:scheme="content"
                    android:mimeType="application/octet-stream"
                    android:pathPattern=".*\\.dxf"
                    tools:ignore="IntentFilterUniqueDataAttributes" />
            </intent-filter>
            <!-- Intent filter for file:// URIs (e.g., local files) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="*"
                    android:scheme="file"
                    android:mimeType="application/dxf"
                    android:pathPattern=".*\\.dxf"
                    tools:ignore="IntentFilterUniqueDataAttributes" />
                <data
                    android:scheme="file"
                    android:mimeType="application/octet-stream"
                    android:pathPattern=".*\\.dxf"
                    tools:ignore="IntentFilterUniqueDataAttributes" />
            </intent-filter>
        </activity>
    </application>
</manifest>